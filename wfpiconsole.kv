## =============================================================================
## SETTINGS
## =============================================================================
<-MenuSidebar>:
    size_hint_x: None
    width: '150dp'
    buttons_layout: menu
    close_button: button
    GridLayout:
        pos: root.pos
        cols: 1
        id: menu
        orientation: 'vertical'
        padding: 5
        canvas.after:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.right - 1, self.y+5
                size: 1, self.height-10
    Button:
        text: 'Close'
        id: button
        size_hint: None, None
        width: root.width - dp(20)
        height: max(50, self.texture_size[1] + dp(20))
        pos: root.x + dp(10), root.y + dp(10)
        font_size: '15sp'
<-SettingsPanel>:
    spacing: 5
    padding: 5
    size_hint_y: None
    height: self.minimum_height
<-SettingSpacer>:
    size_hint_y: None
    height: 2
    canvas.after:
        Color:
            rgb: 1,1,1,1
        Rectangle:
            pos: self.x, self.center_y
            size: self.width, 2
	
		
